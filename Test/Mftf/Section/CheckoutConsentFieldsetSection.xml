<?xml version="1.0" encoding="UTF-8"?>
<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="CheckoutConsentFormSection">
        <element name="phoneInput" type="input" selector="input[name='telephone']" />
        <element name="consentForm" type="block" selector="#consent-checkout-form" />
        <element name="consentCheckbox" type="checkbox" selector="input[name='dd_consent[dd_sms_marketing_consent_checkbox]']" />
        <element name="consentMobileNumber" type="input" selector="input[name='dd_consent[dd_sms_marketing_consent_telephone]']" />
        <element name="consentMobileNumberMessageContainsText" type="text" selector="//div[contains(@class, 'field-error')]//span[contains(text(), '{{text}}')]" parameterized="true"/>
        <element name="transactionalConsentCheckbox" type="checkbox" selector="input[name='dd_consent[dd_sms_transactional_consent_checkbox]']" />
    </section>
</sections>
