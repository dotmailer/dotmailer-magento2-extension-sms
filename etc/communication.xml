<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Communication/etc/communication.xsd">
    <topic name="ddg.sms.subscription" request="Dotdigitalgroup\Sms\Model\Queue\Message\SmsSubscriptionData">
        <handler
            name="ddg_marketing_sms_subscription"
            type="Dotdigitalgroup\Sms\Model\Queue\Consumer\SmsSubscriptionConsumer"
            method="process"
        />
    </topic>
    <topic name="ddg.sms.message" request="Dotdigitalgroup\Sms\Model\Queue\Message\SmsMessageData">
        <handler
            name="smsMessageHandler"
            type="Dotdigitalgroup\Sms\Model\Queue\Consumer\SmsMessageConsumer"
            method="process" />
    </topic>
    <topic name="ddg.sms.cpaas.config" request="Dotdigitalgroup\Sms\Model\Queue\Message\CpaasConfigMessage">
        <handler
            name="cpaasConfigHandler"
            type="Dotdigitalgroup\Sms\Model\Queue\Consumer\CpaasConfigConsumer"
            method="process" />
    </topic>
</config>
